            }

            .section {
                display: flex;
                align-items: center;
                justify-content: space-between;
                margin-bottom: 30px;
                width: 200%; /* 佔滿容器的寬度 */
            }


             .image13 {
                flex: 1;
               
            }

            .image24 {
                flex: 1;
                margin-left: 1000px;
            }

                .image13 img {
                    max-width: 600px;
                    height: 400px;
                    border-radius: 30px;
                    object-fit: cover;
                    transition: transform 0.3s;
                }

            .image24 img {
                max-width: 600px;
                height: 400px;
                border-radius: 30px;
                object-fit: cover;
                transition: transform 0.3s;
                
            }

            .content13 {
                flex: 1;
                text-align: left;
                
            }

            .content24 {             
                text-align: left;
                max-width: 80%;
            }

            .content13 {
                text-align: left;
                max-width: 80%;
            }


                .content h1 {
                    font-size: 36px;
                    color: #333;
                    margin-bottom: 20px;
                }

                .content p {
                    font-size: 18px;
                    color: #555;
                    line-height: 1.6;
                }

            .image-content-container {
                display: flex;
                align-items: center;
            }

            .content13 {
                opacity: 0;
                transition: opacity 1s ease-in-out, transform 1s ease-in-out;
                transform: translateX(-50%);
                width: 120%;
                background-color: rgba(255, 255, 255, 0.8);
                padding: 20px;
                border-radius: 10px;
                position: absolute;
                left: 60%;
                z-index: 1;
            }

            .image13:hover + .content13 {
                opacity: 1;
                transform: translateX(0); 
            }


            .content24 {
                opacity: 0;
                transition: opacity 1s ease-in-out, transform 1s ease-in-out;
                transform: translateX(50%);
                width: 120%;
                background-color: rgba(255, 255, 255, 0.8);
                padding: 20px;
                border-radius: 10px;
                position: absolute;
                right: -30%; 
                z-index: 1;
            }

            .image24:hover + .content24 {
                opacity: 1;
                transform: translateX(0);
            }

            .background {
                background-color: #D0D0D0;
               
            }

            p{
                font-size: 25px
            }

           
        </style>
    }
</head>
<body>
    <div class="header">
