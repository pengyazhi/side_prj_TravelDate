                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
                            <div class="row">
                                <div class="col-md-6">

                                    @*<!-- Basic Card Example -->*@
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary cardTitle">基本資料</h6>
                                        </div>
                                        <div class="card-body">
                                            <input asp-for="CompanyId" type="hidden" value="@Model.CompanyId" />
                                            <input asp-for="ProductId" type="hidden" value="@Model.ProductId" />
                                            <div class="form-group">
                                                <label class="control-label">產品名稱</label>
                                                <input asp-for="ProductName" class="form-control" />
                                                <span asp-validation-for="ProductName" class="text-danger"></span>
                                            </div>

                                            <div class=" form-group">
                                                <label class="control-label">產品類型</label>
                                                @* <select asp-for="ProductTypeId" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                                                    @foreach (ProductTypeList type in Model.types)
                                                    {
                                                        <option value="@type.ProductTypeId">@type.ProductType</option>
                                                    }

                                                </select> *@
                                                <div>
                                                    @{
                                                        int j = 0;
                                                        foreach (ProductTypeList type in Model.types)
                                                        {
                                                                    <input asp-for="ProductTypeId" type="radio" value="@type.ProductTypeId" id="typeradio @j" />
                                                                    <label for="typeradio @j" class="control-label">@type.ProductType</label>
                                                            j++;
                                                        }
                                                    }
                                                </div>
                                            </div>

                                            <div class=" form-group">
                                                <label class="control-label">所在國家</label>
                                                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                                                    @foreach (string type in Model.countries)
                                                    {
                                                        <option>@type</option>
                                                    }
                                                </select>
                                            </div>

                                            <div class=" form-group">
                                                <label class="control-label">所在城市</label>
                                                <select asp-for="CityId" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                                                    @foreach (CityList type in Model.cities)
                                                    {
                                                        <option value="@type.CityId">@type.City</option>
                                                    }
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">產品地址</label>
                                                <input asp-for="Address" class="form-control" />
                                                <span asp-validation-for="Address" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">輪播圖</label>
                                                <input name="photos" type="file" class="form-control" id="photoInput" multiple />

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary cardTitle">產品標籤</h6>
                                        </div>
                                        <div class="card-body">
                                            @foreach (var c in Model.categoryAndTags)
                                            {

                                                <div class="controls-display-row category-click">
                                                    <span class="fs-5">@Html.DisplayFor(modelItem => c.category)</span>
                                                    <div class="d-flex justify-content-end">
                                                        <img id="arrow_bottom_down" src="~/icons/arrow_bottom_down_icon.png">
                                                        <img id="arrow_top_up" src="~/icons/arrow_top_up_icon.png">
                                                    </div>
                                                </div>
                                                <div class="ms-lg-4 filter-block-toggle">
                                                    <ul class="list-unstyled m">
                                                        @{
                                                            int id = 0;
                                                            foreach (var t in c.productTags.Distinct())
                                                            {
                                                                        <li class=" d-flex align-items-center divide-line my-w-80-percent">
                                                                            <input name="Tags" type="checkbox" value="@t.ProductTagDetailsId" @(Model.Tags.Contains(t.ProductTagDetailsId) ? "checked" : "") />
                                                                            <span>@Html.DisplayFor(modelItem => t.ProductTagDetailsName)</span>
                                                                        </li>
                                                                id++;
                                                            }
                                                        }
                                                    </ul>
                                                </div>
                                            }
                                        </div>
                                    </div>
                               </div>

                            </div>
                            <button type="button" class="btn btn-primary next-tab">下一頁</button>
                        </div>
                        <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
                                <div class="row">
                                    <div class="col-md-12">
                                        @*<!-- Basic Card Example -->*@
                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">
                                                <h6 class="m-0 font-weight-bold text-primary cardTitle">產品描述</h6>
                                            </div>
                                            <div class="card-body">

                                                <div class="form-group">
                                            <label class="control-label">簡介(出現在搜尋頁面)</label>
                                                    <input asp-for="OutlineForSearch" class="form-control" />
                                                    <span asp-validation-for="OutlineForSearch" class="text-danger"></span>
                                                </div>

                                                <div class="form-group">
                                            <label class="control-label">產品特色</label>
                                                    <textarea asp-for="Outline" class="form-control" rows="10"></textarea>
                                                    <span asp-validation-for="Outline" class="text-danger"></span>
                                                </div>

                                                <div class="form-group">
                                            <label class="control-label">產品描述</label>
                                                <textarea asp-for="Description" class="form-control col-lg-12" rows="10"></textarea>
                                                    <span asp-validation-for="Description" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                     </div>
                                </div>
                            <button type="button" class="btn btn-primary prev-tab">上一頁</button>
                            <button type="button" class="btn btn-primary next-tab">下一頁</button>
                        </div>
                        <div class="tab-pane fade" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">
                                                <h6 class="m-0 font-weight-bold text-primary cardTitle">內容</h6>
                                            </div>
                                            <div class="card-body">
                                                <div class="form-group">
                                            <label class="control-label">內容名稱</label>
                                                    <input asp-for="PlanName" class="form-control" />
                                                    <span asp-validation-for="PlanName" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                            <label class="control-label">產品內容</label>
                                                <textarea asp-for="PlanDescription" class="form-control col-lg-12" rows="20"></textarea>
                                                    <span asp-validation-for="PlanDescription" class="text-danger"></span>
                                                </div>

                                            </div>
                                        </div>
                                        </div>
                                  </div>
                            <button type="button" class="btn btn-primary prev-tab">上一頁</button>
                            <button type="button" class="btn btn-primary next-tab">下一頁</button>
                             </div>
                            <div class="tab-pane fade" id="tripdetail" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">
                                <div class="row">
                                        <div class="col-md-12">
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary cardTitle">現有行程</h6>
                                    </div>
                                    <div class="card-body" id="contentContainer">
                                        <ul id="sortable">

                                                @{
                                                    int i = 0;
                                                    foreach (TripDetail t in Model.CtripDetail)
                                                    {

                                                                <li id="ui-state-default" class="draggableUnit">
                                                                <div class="card mb-3">
                                                                    <div class="row g-0">
                                                                        <div class="col-md-4">
                                                                                @if (t.ImagePath == null)
                                                                        {
                                                                                    <img src="~/icons/logos/Logo_traveldate.png" class="img-fluid rounded-start" id="imgPreview-@i" alt="...">
                                                                        }
                                                                        else
                                                                        {
                                                                                    <img src="~/images/@t.ImagePath" class="img-fluid rounded-start" id="imgPreview-@i" alt="...">
                                                                        }

                                                                        </div>
                                                                        <div class="col-md-8">
                                                                            <div class="card-body">
                                                                                <div class="modal-header">
                                                                                    <h5 class="card-title">第 @t.TripDay 天</h5>

                                                                                </div>
                                                                                    <input type="hidden" name="triptest[@i].ImagePath" value="@t.ImagePath"/>
                                                                                <input type="hidden" id="photoInput" name="triptest[@i].TripDay" value="@t.TripDay" />
                                                                                <input type="hidden" id="photoInput" name="triptest[@i].TripDetailId" value="@t.TripDetailId" />
                                                                                    <input type="file" class="form-control" name="triptest[@i].photo" id="uploadImage-@i" />
                                                                                <textarea class="col-lg-12 card-text" id="descriptionInput" name="triptest[@i].TripDetail" rows="8">@t.TripDetail1</textarea>
                                                                            </div>

                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </li>
                                                        i++;
                                                    }
                                                }

                                             </ul>

                                    </div>
                                </div>
                                        
                                </div>
                                
                               </div>
                            <button type="button" class="btn btn-primary prev-tab" style="float:left">上一頁</button>
                            <div class="form-group text-right">
                                <input type="submit" value="修改並儲存" class="btn btn-primary" id="EditProduct" />
                                <a asp-action="List" class="btn btn-primary text-right">取消</a>


                            </div>
                            

                        </div>

                </form>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

