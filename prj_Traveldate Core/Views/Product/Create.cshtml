@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/search_jq.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        
        $('#createProduct').click(function () {
            swal("新增產品成功！", "稍後將自動為您導向", "success");
        
        });


        $('.next-tab').click(function () {
            const $activeTab = $('.tab-pane.active');
            const $nextTab = $activeTab.next('.tab-pane');

            if ($nextTab.length > 0) {
                $activeTab.removeClass('active');
                $nextTab.addClass('active');

                // 激活对应的标签按钮
                const targetId = $nextTab.attr('id');
                $(`[data-bs-target="#${targetId}"]`).tab('show');
            }
        });

        // 点击上一个按钮
        $('.prev-tab').click(function () {
            const $activeTab = $('.tab-pane.active');
            const $prevTab = $activeTab.prev('.tab-pane');

            if ($prevTab.length > 0) {
                $activeTab.removeClass('active');
                $prevTab.addClass('active');

                // 激活对应的标签按钮
                const targetId = $prevTab.attr('id');
                $(`[data-bs-target="#${targetId}"]`).tab('show');
            }
        });


        $('#generatetripDay').click(function () {
            $('#sortable').empty();
            var tripDay = $('#tripDay');
            var numberOftripDay = parseInt(tripDay.val()); // 讀取使用者輸入的值

            // 檢查輸入的值是否有效
            if (!isNaN(numberOftripDay) && numberOftripDay > 0) {
                for (var i = 0; i < numberOftripDay; i++) {
                    var day = i+1;
                    var triplHtml = `<li id="ui-state-default" class="draggableUnit">
                                                    <div class="card mb-3">
                                                        <div class="row g-0">
                                                            <div class="col-md-4">
                                                                        <img src="@Url.Content("~/icons/logos/Logo_traveldate.png")" class="img-fluid rounded-start" id="imgPreview${i}" alt="...">
                                                            </div>
                                                            <div class="col-md-8">
                                                                <div class="card-body">
                                                                    <div class="modal-header">
                                                                                <h5 class="card-title">第${day}天</h5>
                                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                    </div>
                                                                            <input name="triptest[${i}].TripDay" type="hidden"  value="${day}" />
                                                                                     <input name="triptest[${i}].photo" type="file" class="form-control" id="uploadImage${i}" />
                                                                                      <textarea name="triptest[${i}].TripDetail" class="col-lg-12 card-text" id="descriptionInput${i}" rows="8"></textarea>
                                                                </div>

                                                            </div>

                                                        </div>
                                                    </div>
                                                </li>`  ;

                    // 將生成的 SecondModel 添加到 div 中
                    $('#sortable').append(triplHtml);
                }
            } else {
                alert('請輸入有效的數量。');
            }
        });
        $(function () {
            $("#sortable").sortable({
                revert: true
            });
            $("#draggable").draggable({
                connectToSortable: "#sortable",
                helper: "clone",
                revert: "invalid"
            });
            $("ul, li").disableSelection();
        });



        $(document).ready(function () {
            // 更新天数和其他值的函数
            function updateValues() {
                // 获取所有排序后的区块
                const sortedBlocks = $("#sortable").find(".draggableUnit");

                // 遍历所有区块并重新计算天数和其他值
                sortedBlocks.each(function (index) {
                    const newDay = index + 1; // 计算新的天数，从1开始
                    const newI = index; // 计算新的i值，从0开始

                    // 更新天数
                    $(this).find(".card-title").text(`第${newDay}天`);

                    // 更新隐藏字段的值和name属性
                    $(this).find("input, textarea").each(function () {
                        const fieldName = $(this).attr("name");
                        let fieldType = "";

                        if (fieldName.includes("TripDay")) {
                            fieldType = "TripDay";
                        } else if (fieldName.includes("photo")) {
                            fieldType = "photo";
                        } else if (fieldName.includes("TripDetail")) {
                            fieldType = "TripDetail";
                            const newId = `descriptionInput${newI}`;
                            $(this).attr("id", newId);
                        }

                        if (fieldType !== "") {
                            const newName = `triptest[${newI}].${fieldType}`;
                            $(this).attr("name", newName);
                            if (fieldType === "TripDay") {
                                $(this).val(newDay);
                            }
                        }
                    });
                });
            }

            // 绑定 Close 按钮点击事件，删除所在区块并调用更新函数
            $(document).on("click", ".btn-close", function () {
                $(this).closest(".draggableUnit").remove();
                // 调用更新函数
                updateValues();
            });

            // 初始化 Sortable
            $("#sortable").sortable({
                update: function (event, ui) {
                    // 调用更新函数
                    updateValues();
                },
            });

            // 初始排序
            $("#sortable").disableSelection();
        });

        $(document).ready(function () {
            $(document).on('change', 'input[type="file"]',function () {
                var fileInput = this;
                var imgId = $(fileInput).attr('id').replace('uploadImage', 'imgPreview');
                var imgPreview = $('#' + imgId);

                if (fileInput.files && fileInput.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        imgPreview.attr('src', e.target.result);
                    };

                    reader.readAsDataURL(fileInput.files[0]);
                } else {
                    // 如果没有选择文件，你可以设置一个默认的图片，例如：
                    imgPreview.attr('src', "@Url.Content("~/icons/logos/Logo_traveldate.png")");
                    
                    // 或者隐蔽<img>元素
                    // imgPreview.hide();
                }
            });
        });
